docker.enabled = true
process.container= ''

manifest {
    name                                  = 'exome-cnv-nf'
    version                               = '0.2.1'
    description                           = 'Nextflow pipeline to analyse dark regions'
    author                                = 'Sebastian SchÃ¶nherr'
    homePage                              = 'https://github.com/seppinho/exome-cnv-nf'
    mainScript                            = 'main.nf'
    nextflowVersion                       = '!>=21.04.0'
}

// Global default params, used in configs
params {

    //Required inputs
    project                        = null
    input                          = null
    gold                           = null
    region                         = null
    build                          = null
    reference                      = null
    mutserve_detection_limit       = 0.01
    mutserve_baseQ                 = 20
    mutserve_mapQ                  = 20
    mutserve_alignQ                = 30
    contig                         = null
    threads                        = (Runtime.runtime.availableProcessors() - 1)
    //optional
    outdir                         = null
    reads_quality_limit            = 10


}

profiles {
    debug { process.beforeScript          = 'echo $HOSTNAME' }

    docker {
        process.container                 = 'quay.io/genepi/exome-cnv-nf:v0.0.2'
        docker.enabled                    = true
        docker.userEmulation              = true
        singularity.enabled               = false
    }

    singularity {
        process.container                 = 'quay.io/genepi/exome-cnv-nf:v0.0.2'
        singularity.enabled               = true
        singularity.autoMounts            = true
        docker.enabled                    = false
    }

    development {
        process.container                 = 'genepi/exome-cnv-nf:latest'
        docker.enabled                    = true
        docker.userEmulation              = true
        resume                            = true
        singularity.enabled               = false
    }

   test      {
        includeConfig 'conf/test.config'
   }

}
